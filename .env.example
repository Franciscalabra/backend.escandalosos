# Configuración básica
APP_NAME="Escandalosos Pizza"
APP_ENV=production
APP_KEY=base64:TU_CLAVE_AQUI
APP_DEBUG=false
APP_TIMEZONE=America/Santiago
APP_URL=https://www.escandalosospizza.cl

APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_CL

# Base de datos (SiteGround)
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=nombre_bd_siteground
DB_USERNAME=usuario_bd_siteground
DB_PASSWORD=password_bd_siteground

# Cache y sesiones
CACHE_STORE=database
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.escandalosospizza.cl

# Email (configurar según SiteGround)
MAIL_MAILER=smtp
MAIL_HOST=mail.escandalosospizza.cl
MAIL_PORT=587
MAIL_USERNAME=info@escandalosospizza.cl
MAIL_PASSWORD=tu_password_email
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="info@escandalosospizza.cl"
MAIL_FROM_NAME="Escandalosos Pizza"

# File storage
FILESYSTEM_DISK=public

# Queue
QUEUE_CONNECTION=database

# Logs
LOG_CHANNEL=single
LOG_LEVEL=error